<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

<!--    原先Spinner宽度写死了。现在让其weight=1，然后外面加个相对布局把宽度撑满-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">

            <Spinner
                style="@style/ComboBox"
                android:id="@+id/SProfile"
                android:layout_width="0dp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/BTSettings"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="8dp"
                app:tint="@color/colorPrimary"
                android:src="@drawable/icon_settings" />
        </LinearLayout>
    </RelativeLayout>


    <CheckBox
        android:id="@+id/CBShowTouchscreenControls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="@string/show_touchscreen_controls" />

    <CheckBox
        android:id="@+id/CBRelativeMouseMovement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/relative_mouse_movement" />
</LinearLayout>